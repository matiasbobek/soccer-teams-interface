
<div class="container-sm" id="title">
    <h1> Premier League Teams </h1>
</div>

</hr>

<div class="container-sm">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Team Crest</th>
        <th scope="col">Name</th>
        <th scope="col">
        </th>
      </tr>
    </thead>
    <tbody>
    {{#each data.teams as |item|}}
      <tr>
      {{#if item.crestUrl}}
      <td><img src="{{item.crestUrl}}" alt="soccer-crest" width="100px" height="100px"/></td>
      {{else if item.crestFileName}}
      <td><img src="/team-crest/{{item.crestFileName}}" alt="soccer-crest" width="100px" height="100px"/></td>
      {{else}}
      <td></td>
      {{/if}}
        <td>{{item.name}}</td>
        <td colspan="2">
          <button class="btn btn-primary" onclick="window.location.href = '/team/?tla={{item.tla}}'">View</button>
          <button class="btn btn-primary" onclick="window.location.href = '/modify/?tla={{item.tla}}'">Modify</button>          
        </td>
      </tr>
    {{/each}}
    </tbody>
  </table>
  <button class="btn btn-primary" onclick="window.location.href = '/new-team'">Create a new team</button>
</div>

